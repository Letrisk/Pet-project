        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <ContentControl Grid.Row="0" Grid.Column="0" Content="{Binding SelectedView}"/>
        <view:ConnectionView Visibility="{Binding ConnectionVisibility}" ></view:ConnectionView>
        <view:ChatView Grid.Row="1" Visibility="{Binding ChatVisibility}"></view:ChatView>
        <view:EventLogView Grid.Row="0" Grid.Column="1" Visibility="{Binding EventLogVisibility}"></view:EventLogView>
        <view:GroupChatView Grid.Row="1" Grid.Column="1" Visibility="{Binding GroupChatVisibility}"></view:GroupChatView>
    </Grid>-->
